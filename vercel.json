{
    "version": 2,
    "builds": [
      {
        "src": "Harmonize/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "Harmonize/dist" }
      },
      {
        "src": "index.js",
        "use": "@vercel/node",
        "config": { "project": "api", "distDir": "api" }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }