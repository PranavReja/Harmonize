{ 
    "version": 2, 
    "builds": [ 
        { "src": "Harmonize/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }, 
        { "src": "api/index.js", "use": "@vercel/node" } 
    ], 
    "rewrites": [ 
        { "source": "/api/(.*)", "destination": "/api/index.js" }, 
        { "source": "/(.*)", "destination": "/Harmonize/dist/index.html" } 
    ] 
}